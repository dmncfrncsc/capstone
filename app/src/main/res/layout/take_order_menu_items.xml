<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/take_order_menu_bg"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingStart="16dp"
        android:orientation="horizontal"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/orderImage"
                android:layout_weight="2.5"
            android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:src="@drawable/foodpictureplaceholder" />
        <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Item Name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway"
                        android:text="Price: â‚±"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway"
                        android:text="###.##"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway"
                        android:text="Available: "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtRemainingStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway"
                        android:text="##"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            <TextView
                android:id="@+id/tvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/raleway_medium"
                android:text=""
                android:textColor="#BA0000"
                android:textSize="18sp"
                android:visibility="invisible" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/category"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSolo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/btncart_confirm_bg"
                        android:text="SOLO" />

                    <Button
                        android:id="@+id/btnBucket"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginVertical="2dp"
                        android:background="@drawable/btncart_confirm_bg"
                        android:text="BUCKET" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearTop">


        <TextView
            android:id="@+id/tvQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/linearLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQ">

            <ImageButton

                android:id="@+id/btnAddQty"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_qty"
                android:src="@drawable/plus_img" />

            <TextView
                android:id="@+id/txtQty"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:text="##"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/btnSubQty"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/background_qty"
                android:src="@drawable/subtract_img" />

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_meal_options_bg"

                android:paddingHorizontal="5dp"
                android:paddingVertical="6dp"
                android:text="Add Order"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>